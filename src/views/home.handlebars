<h1>Todos los productos</h1>


<a href="/chat">Chat</a>

<section> 
    <div class="container d-flex align-content-stretch flex-wrap justify-content-evenly">
    
    {{#each products}}
        <div class="card m-3" style="min-width:18rem; max-width: 18rem;">
            <img src={{thumbnails.[0]}} class="card-img-top" style="height: 220px; width:100%; display:block; object-fit: cover" alt="imagen" >
            <div class="card-body">
            <h5 class="card-title"> {{title}}</h5>
            <p>Precio: {{price}}</p>
            <a href="#" class="btn btn-success">Buy!</a>
            </div>
        </div>        
    {{/each}}
    
    </div>
</section>